def count_letters_digits(input_string):
    letters = 0
    digits = 0
    
    for char in input_string:
        if char.isalpha():
            letters += 1
        elif char.isdigit():
            digits += 1
 
    return f"Letters: {letters}, Digits: {digits}"

input_str = input("請輸入字串：")
result = count_letters_digits(input_str)
print(result)
